
<div class="first-title">
  <h2>Hello,<br><%= @team_member.first_name %> 👋🏼</h2>
</div>
<div class='card-2 d-flex justify-content-between' style='margin-top: 0.8em!important;'>
   <div class="p-2">
    <%= cl_image_tag(@team_member.photo.key, class: "avatar-small")%>
   </div>
   <div class="mr-auto p-2">
      <h3><%= @team_member.first_name %></h3>
      <h3 style="margin-top: -5px"><%= @team_member.last_name %></h3>
      <h5><%= @team_member.introduction %></h5>
   </div>
</div>

<div class="card-1 d-flex justify-content-center px-3 "style="margin-top: 25px">
  <div class="card-body  d-flex justify-content-around" style="margin-top: 25px;">
    <div>
      <h2> <%= image_tag('star-full.svg', height: '25px', width: '25px') %> <%= @team_member.av_rating %></h2>
      <p>Average rating</p>
    </div>
    <div>
      <h2>$ <%= @team_member.last_tip %></h2>
      <p>Last tip</p>
    </div>
    <div>
      <h2>$ <%= @team_member.sum_tip %></h2>
      <p>Tips for this month</p>
    </div>
  </div>
</div>


<div class="card-1 d-flex  d-flex justify-content-start" style="margin-top: 25px">
  <div class="card-body d-flex " >
  <div>
    <h3 class="recent">Recent reviews</h3>
    <div class="reviews"> <% @team_member.tables.each do |table| %>
      <p class = "date"><%= table.created_at.strftime("%d/%m/%Y") %></p>
      <p><%= table.review %></p>
     <hr>
    <% end %>
    </div>
  </div>
  </div>
</div>
