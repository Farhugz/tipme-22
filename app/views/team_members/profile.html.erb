<%= render "shared/navbar" %>
<div class="first-title">

</div>
<div class="card-1 d-flex justify-content-between "style="margin-top: 25px">
  <div class="card-body d-flex justify-content-around" style="margin-top: 10px;flex-direction: column;">
    <div><%= cl_image_tag(@team_member.photo.key, class: "avatar-small")%></div>
    <div>
      <h3> <%= image_tag('star-full.svg', height: '20px', width: '20px') %> <%= @team_member.av_rating %></h3>
    </div>
    </div>
   <div class="mr-auto p-2">
   <div class="d-flex justify-content-around align-items-end">
    <div>
      <h3 style="margin-top: 20px;"><%= @team_member.first_name %> <%= @team_member.last_name %></h3>
      <%# <h3 style="margin-top: -5px"><%= @team_member.last_name %>
    </div>
    </div>
      <h5><%= @team_member.introduction %></h5>
      <div class="card-body  d-flex justify-content-around text-center">
    <div>
      <h3 style="font-family: 'Marcellus';">€ <%= @team_member.last_tip.to_i %></h3>
      <p style="line-height: 20px;">Last tip</p>
    </div>
    <div style="margin-bottom: 8px;">
      <h3 style="font-family: 'Marcellus';">€ <%= @team_member.sum_tip.to_i %></h3>
      <p style="line-height: 20px;">Monthly tips</p>
    </div>
    </div>
  </div>
</div>

<div class="card-1 d-flex justify-content-start text-start" style="margin-top: 25px">
  <div class="card-body d-flex " >
  <div>
    <h3 class="recent">Recent reviews</h3>
    <div class="reviews" style="margin-top: 30px;"> <% @tables.each do |table| %>
      <div class="d-flex justify-content-between">
        <p class = "date" style="text-align: left !important; padding: 0 18px; margin-left: 0px;"><%= table.date.strftime("%d/%m/%Y") %></p>
        <p class = "date" style="text-align: left !important; padding: 0 18px; margin-left: 0px;">€ <%= table.tip.to_i %></p>
        <p style="text-align: left !important; padding: 0 18px; margin-right: 2px;"><%= image_tag('star-full.svg', height: '20px', width: '20px') %> <%= table.rating %> </p>
      </div>
      <p style="text-align: left !important; padding: 0 18px;"><%= table.review %></p>
     <hr>
    <% end %>
    </div>
  </div>
  </div>
</div>
