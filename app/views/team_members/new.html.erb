  <%= render "shared/navbar" %>
  <div class="bg-01">

    <!-- Section: Design Block -->
    <section class="text-center">

      <!-- First Div -->
      <div class="first-div" style="margin-bottom: 3em;">
        <h2>Let's create a<br>New Team Member ğŸ¤˜</h2>
      </div>

      <!-- Second Div -->
        <div class="second-div">
          <div class="card-3 card-body py-5 px-md-5" data-controller="flatpickr"> <!-- HERE -->
<%= simple_form_for [@restaurant, @team_member] do |f| %>
            <div class="row d-flex justify-content-center">
              <div class="col-lg-8">
                <h3 class="fw-bold mb-5" style="margin-top: -15px">Join the Team ...</h3>
              </div>
              <div class="d-flex" style="margin-top: -20px;">
                <%= f.input :first_name, label: false, input_html: { class: "form-style1", placeholder: "First Name" } %>
                <%= f.input :last_name, label: false, input_html: { class: "form-style1", placeholder: "Last Name" } %>
              </div>
              <div style="margin-top: 20px; margin-bottom: 20px;">
                <%= f.input :birth_date, label: false, as: :string, input_html: { class: "form-style2", placeholder: "mm/dd/yy", data: { flatpickr_target: "startTime" } } %>
                  <link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/dark.css">
              </div>
            <div class="form-actions" style="margin-bottom: -20px!important;">
              <%= f.button :submit,"Create", class: "btn1" %>
            </div>
          </div>
        </div>
    </section>
    <!-- Section: Design Block -->
  </div>
<% end %>
