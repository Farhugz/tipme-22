<div class="first-div" style="margin-bottom: 3em;">
  <h2>Hello, <%= @user.first_name %> <%= @user.last_name %> ðŸ¤˜</h2>
</div>

<div data-controller="restaurant-data">
    <div class="card-1 d-flex justify-content-between align-items-center" style="padding: 0.5em;">
        <div class="p-2">
          <%= simple_form_for @user, html: {data: {restaurant_data_target: "form"}} do |f| %>
              <%= f.input :restaurant,
                          collection: @restaurants,
                          class: "form-control form-style2",
                          label: false,
                          selected: true,
                          value: params[:query],
                          input_html: {data: {restaurant_data_target: "input", action: "input->restaurant-data#handleChange"} } %>
          <% end %>
        </div>
        <div class="mr-auto p-2 btn3" style="margin-top: 3px; margin-right: 0.5em;">
          <%= link_to 'Add a restaurant', new_restaurant_path, class: "" %>
        </div>
    </div>

  <div class="second-div">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link button1" id="pills-dashboard-tab" data-bs-toggle="pill" data-bs-target="#pills-dashboard" type="button" role="tab" aria-controls="pills-dashboard" aria-selected="false">Dashboard</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link button2 active" id="pills-list-tab" data-bs-toggle="pill" data-bs-target="#pills-list" type="button" role="tab" aria-controls="pills-list" aria-selected="false">Team Members</button>
      </li>
    </ul>
  <div>

  <div class="third-div">
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade" id="pills-dashboard" role="tabpanel" aria-labelledby="pills-dashboard-tab">
        <%= render "figures" %>
      </div>
      <div class="tab-pane fade show active" id="pills-list" role="tabpanel" aria-labelledby="pills-list-tab">
        <div data-restaurant-data-target="list">
          <%= render "list" %>
        </div>
      </div>
    </div>
  </div>
  <div class="four-div d-flex justify-content-center align-items-center" style="margin-bottom: 35px;">
    <%= button_to "Log out", destroy_user_session_path, method: :delete, class: 'button1' %>
  </div>
</div>
