<%= render "shared/navbar" %>
<div class="first-div" style="margin-top: 3em; margin-bottom: 1em;">
  <h2>Hello <%= @user.first_name %> ðŸ¤˜</h2>
</div>

<div data-controller="restaurant-data">
    <div class="card-1 d-flex justify-content-between align-items-center" style="padding: 0.5em;">
        <div class="p-2">
          <%= simple_form_for @user, html: {data: {restaurant_data_target: "form"}} do |f| %>
              <%= f.input :restaurant,
                          collection: @restaurants,
                          class: "form-control form-style2",
                          label: false,
                          selected: true,
                          value: params[:query],
                          input_html: {data: {restaurant_data_target: "input", action: "input->restaurant-data#handleChange"} } %>
          <% end %>
        </div>
        <div class="mr-auto p-2 btn3" style="margin-top: 3px; margin-right: 0.5em;">
          <%= link_to 'Add a restaurant', new_restaurant_path, class: "" %>
        </div>
    </div>

  <div data-restaurant-data-target="tabs">
    <%= render 'tabs' %>
  </div>
</div>
<div class="four-div d-flex justify-content-center align-items-center" style="margin-bottom: 35px;">
  <%= button_to "Log out", destroy_user_session_path, method: :delete, class: 'button2' %>
</div>
