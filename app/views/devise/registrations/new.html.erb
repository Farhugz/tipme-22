    <div>
      <%= image_tag('logo.svg', alt: 'Tip-Me logo', class: 'logo')%>
    </div>
</div>

<div class="first-div1">
  <h2>Let's create your acccount ðŸ•¹</h2>
    <div class="date">
      <script>
      const options = {
        weekday: "long",
        year: "numeric",
        month: "long",
        day: "numeric",
      }
      date = new Date().toLocaleDateString("en-GB", options);
      document.write(date);
      </script>
